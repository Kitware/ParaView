    eval destroy [winfo children .]
    killTables
    set x {}
    testobjconfig alltypes .a
    lappend x [testobjconfig info alltypes]
    testobjconfig alltypes .b
    lappend x [testobjconfig info alltypes]
    eval destroy [winfo children .]
    set x
} {{1 15 -boolean} {2 15 -boolean}}
