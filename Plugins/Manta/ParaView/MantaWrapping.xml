<ServerManagerConfiguration>

  <!-- ================================================================= -->

  <ProxyGroup name="helpers">
    <SourceProxy name="FactoryHelper" class="vtkServerSideFactory"/>
  </ProxyGroup>

  <!-- ================================================================= -->

  <ProxyGroup name="composite_managers">
    <Proxy name="MantaCompositeRenderManager" class="vtkCompositeRenderManager">
      <ProxyProperty name="RenderWindow"
        command="SetRenderWindow">
        <ProxyGroupDomain name="groups">
          <Group name="renderwindow" />
        </ProxyGroupDomain>
      </ProxyProperty>
      <IntVectorProperty name="TileDimensions"
         number_of_elements="2"
         default_values="0 0">
        <IntRangeDomain name="range" min="0 0" />
      </IntVectorProperty>
      <IntVectorProperty name="TileMullions"
         number_of_elements="2"
         default_values="0 0">
        <IntRangeDomain name="range" min="0 0" />
      </IntVectorProperty>
      <IntVectorProperty name="EnableTiles"
        number_of_elements="1"
        default_values="0">
        <BooleanDomain name="bool" />
        <Documentation>
          To use tile displays, it is essential to set this property to 1.
        </Documentation>
      </IntVectorProperty>
      <ProxyProperty name="SortingKdTree">
        <ProxyGroupDomain name="groups">
          <Group name="locators"/>
        </ProxyGroupDomain>
      </ProxyProperty>
      <Property name="InitializeOffScreen"
        command="InitializeOffScreen">
      </Property>
      <ProxyProperty
        name="Compositer"
        command="SetCompositer">
        <ProxyGroupDomain name="group">
          <Group name="compositers" />
        </ProxyGroupDomain>
      </ProxyProperty>
    </Proxy>
  </ProxyGroup>

  <!-- ================================================================= -->
  <ProxyGroup name="representations">
                           
    <MantaRepresentation name="MantaGeometryRepresentation"
      base_proxygroup="representations" 
      base_proxyname="GeometryRepresentation">

      <StringVectorProperty name="MaterialType"
        command="SetMaterialType"
        update_self="1"
        number_of_elements="1"
        default_values="default" >
        <StringListDomain name="material">
          <String value="default"/>
          <String value="lambertian"/>
          <String value="phong"/>
          <String value="transparent"/>
          <String value="thindielectric"/>
          <String value="dielectric"/>
          <String value="metal"/>
          <String value="orennayer"/>
        </StringListDomain>
      </StringVectorProperty>

      <DoubleVectorProperty name="Reflectance"
        command="SetReflectance"
        update_self="1"
        number_of_elements="1"
        default_values="0.0">
      </DoubleVectorProperty>

      <DoubleVectorProperty name="Thickness"
        command="SetThickness"
        update_self="1"
        number_of_elements="1"
        default_values="1.0">
      </DoubleVectorProperty>

      <DoubleVectorProperty name="Eta"
        command="SetEta"
        update_self="1"
        number_of_elements="1"
        default_values="1.52">
      </DoubleVectorProperty>

      <DoubleVectorProperty name="N"
        command="SetN"
        update_self="1"
        number_of_elements="1"
        default_values="1.0">
      </DoubleVectorProperty>

      <DoubleVectorProperty name="Nt"
        command="SetNt"
        update_self="1"
        number_of_elements="1"
        default_values="1.0">
      </DoubleVectorProperty>

      <!-- End of MantaGeometryRepresentation -->
    </MantaRepresentation>
  </ProxyGroup>

  <!-- ================================================================= -->

  <ProxyGroup name="views">

    <MantaViewProxy 
       name="MantaView"
       base_proxygroup="views" base_proxyname="RenderView">
      
      <Documentation>
        A render view that uses the Manta ray tracing engine to render 
        instead of OpenGL.
      </Documentation>

      <!-- End of MantaRenderView -->
    </MantaViewProxy>


    <MantaClientServerViewProxy 
       name="MantaClientServerRenderView"
       base_proxygroup="views" base_proxyname="ClientServerRenderView">
      
      <Documentation>
        A render view that uses Manta rendering in client server configurations.
      </Documentation>

      <IntVectorProperty name="Threads"
        command="SetThreads"
        update_self="1"
        immediate_update="1"
        number_of_elements="1"
        default_values="1">
        <IntRangeDomain name="range" min="1" />
        <Documentation>
          Controls number of render threads.
        </Documentation>
      </IntVectorProperty>

      <IntVectorProperty name="EnableShadows"
        command="SetEnableShadows"
        update_self="1"
        immediate_update="1"
        number_of_elements="1"
        default_values="0">
        <BooleanDomain name="bool" />
        <Documentation>
          Turns on shadow.
        </Documentation>
      </IntVectorProperty>

      <IntVectorProperty name="Samples"
        command="SetSamples"
        update_self="1"
        immediate_update="1"
        number_of_elements="1"
        default_values="1">
        <IntRangeDomain name="range" min="1" />
        <Documentation>
          Controls multisampling.
        </Documentation>
      </IntVectorProperty>

      <IntVectorProperty name="MaxDepth"
        command="SetMaxDepth"
        update_self="1"
        immediate_update="1"
        number_of_elements="1"
        default_values="5">
        <IntRangeDomain name="range" min="1" />
        <Documentation>
          Controls maximum number of ray bounces.
        </Documentation>
      </IntVectorProperty>

    </MantaClientServerViewProxy>
        
    <MantaParallelViewProxy 
       name="MantaIceTDesktopRenderView"
       base_proxygroup="views" base_proxyname="IceTDesktopRenderView">
      
      <Documentation>
        A render view that uses Manta rendering in client parallel-server configurations.
      </Documentation>

      <SubProxy>
        <Proxy  name="ParallelRenderManager" 
                proxygroup="composite_managers"
                proxyname="MantaCompositeRenderManager"
                override="1">
        </Proxy>
        <ExposedProperties>
          <Property name="Compositer" />
        </ExposedProperties>
      </SubProxy>

      <SubProxy>
        <Proxy  name="Tree" 
                proxygroup="compositers"
                proxyname="TreeCompositer">
        </Proxy>
      </SubProxy>

      <SubProxy>
        <Proxy name="Renderer" 
               proxygroup="renderers"
               proxyname="Renderer" 
               override="1">
        </Proxy>
        <ExposedProperties>
          <Property name="Background" />
          <Property name="DepthPeeling" />
          <Property name="MaximumNumberOfPeels" />
          <Property name="Background2" />
          <Property name="UseGradientBackground" />
          <Property name="UseTexturedBackground" />
        </ExposedProperties>
      </SubProxy>

      <IntVectorProperty name="Threads"
        command="SetThreads"
        update_self="1"
        immediate_update="1"
        number_of_elements="1"
        default_values="1">
        <IntRangeDomain name="range" min="1" />
        <Documentation>
          Controls number of render threads.
        </Documentation>
      </IntVectorProperty>

      <IntVectorProperty name="EnableShadows"
        command="SetEnableShadows"
        update_self="1"
        immediate_update="1"
        number_of_elements="1"
        default_values="0">
        <BooleanDomain name="bool" />
        <Documentation>
          Turns on shadow.
        </Documentation>
      </IntVectorProperty>

      <IntVectorProperty name="Samples"
        command="SetSamples"
        update_self="1"
        immediate_update="1"
        number_of_elements="1"
        default_values="1">
        <IntRangeDomain name="range" min="1" />
        <Documentation>
          Controls multisampling.
        </Documentation>
      </IntVectorProperty>

      <IntVectorProperty name="MaxDepth"
        command="SetMaxDepth"
        update_self="1"
        immediate_update="1"
        number_of_elements="1"
        default_values="5">
        <IntRangeDomain name="range" min="1" />
        <Documentation>
          Controls maximum number of ray bounces.
        </Documentation>
      </IntVectorProperty>

    </MantaParallelViewProxy>

    <MantaBatchViewProxy
       name="MantaBatchView"
       base_proxygroup="views" base_proxyname="IceTCompositeView">

      <Documentation>
        A render view that uses Manta rendering in batch parallel configurations.
      </Documentation>

      <SubProxy>
        <Proxy  name="ParallelRenderManager"
                proxygroup="composite_managers"
                proxyname="MantaCompositeRenderManager"
                override="1">
        </Proxy>
        <ExposedProperties>
          <Property name="Compositer" />
        </ExposedProperties>
      </SubProxy>

      <SubProxy>
        <Proxy  name="Tree"
                proxygroup="compositers"
                proxyname="TreeCompositer">
        </Proxy>
      </SubProxy>

      <SubProxy>
        <Proxy name="Renderer"
               proxygroup="renderers"
               proxyname="Renderer"
               override="1">
        </Proxy>
        <ExposedProperties>
          <Property name="Background" />
          <Property name="DepthPeeling" />
          <Property name="MaximumNumberOfPeels" />
          <Property name="Background2" />
          <Property name="UseGradientBackground" />
          <Property name="UseTexturedBackground" />
        </ExposedProperties>
      </SubProxy>

      <IntVectorProperty name="Threads"
        command="SetThreads"
        update_self="1"
        immediate_update="1"
        number_of_elements="1"
        default_values="1">
        <IntRangeDomain name="range" min="1" />
        <Documentation>
          Controls number of render threads.
        </Documentation>
      </IntVectorProperty>

      <IntVectorProperty name="EnableShadows"
        command="SetEnableShadows"
        update_self="1"
        immediate_update="1"
        number_of_elements="1"
        default_values="0">
        <BooleanDomain name="bool" />
        <Documentation>
          Turns on shadow.
        </Documentation>
      </IntVectorProperty>

      <IntVectorProperty name="Samples"
        command="SetSamples"
        update_self="1"
        immediate_update="1"
        number_of_elements="1"
        default_values="1">
        <IntRangeDomain name="range" min="1" />
        <Documentation>
          Controls multisampling.
        </Documentation>
      </IntVectorProperty>

      <IntVectorProperty name="MaxDepth"
        command="SetMaxDepth"
        update_self="1"
        immediate_update="1"
        number_of_elements="1"
        default_values="5">
        <IntRangeDomain name="range" min="1" />
        <Documentation>
          Controls maximum number of ray bounces.
        </Documentation>
      </IntVectorProperty>

    </MantaBatchViewProxy>

    <!-- End of Views -->
  </ProxyGroup>

  <!-- ================================================================= -->

</ServerManagerConfiguration>
